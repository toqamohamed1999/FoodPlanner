<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Meal_Details_Activity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:cardPreventCornerOverlap="false"
                app:layout_constraintEnd_toStartOf="@+id/guideline_Left"
                app:layout_constraintHorizontal_bias="0.466"
                app:layout_constraintStart_toEndOf="@+id/guideline_Right"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/meal_details_imageView"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/cake" />

                <ImageView
                    android:id="@+id/mealDetails_card_fav_imageview"
                    android:layout_width="43dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"
                    android:background="#57FFFFFF"
                    android:backgroundTint="#2AFFFFFF"
                    android:layout_alignParentEnd="true"
                    app:layout_constraintTop_toTopOf="@id/meal_details_imageView"
                    app:srcCompat="@drawable/baseline_favorite_24" />

                <ImageButton
                    android:id="@+id/resultSearch_back_imageBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/circle"
                    android:src="@drawable/baseline_arrow_back_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </RelativeLayout>


            <TextView
                android:id="@+id/mealDetails_mealName_txtView"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Meal Name"
                android:textSize="20dp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toStartOf="@+id/mealDetails_addToPlan_btn"
                app:layout_constraintHorizontal_bias="0.072"
                app:layout_constraintStart_toEndOf="@+id/guideline_Right"
                app:layout_constraintTop_toBottomOf="@+id/view"
                tools:text="Meal Name" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mealDetails_ingredientsList_recycleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="30dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toStartOf="@+id/guideline_Left"
                app:layout_constraintStart_toEndOf="@+id/guideline_Right"
                app:layout_constraintTop_toBottomOf="@+id/mealDetails_addToPlan_btn"
                tools:itemCount="20"
                tools:listitem="@layout/ingredient" />

            <ImageView
                android:id="@+id/mealDetails_mealCate_txtView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/meal_food_icon"
                app:layout_constraintStart_toEndOf="@+id/guideline_Right"
                app:layout_constraintTop_toBottomOf="@+id/mealDetails_ingredientsList_recycleView"
                tools:text="Category: " />

            <TextView
                android:id="@+id/mealDetails_mealCateVal_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Category Value"
                app:layout_constraintEnd_toStartOf="@+id/mealDetails_mealArea_txtView"
                app:layout_constraintHorizontal_bias="0.118"
                app:layout_constraintStart_toEndOf="@+id/mealDetails_mealCate_txtView"
                app:layout_constraintTop_toTopOf="@+id/mealDetails_mealCate_txtView"
                tools:text="Category Value" />

            <ImageView
                android:id="@+id/mealDetails_mealArea_txtView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/baseline_flag_circle_24"
                app:layout_constraintEnd_toStartOf="@+id/mealDetails_mealAreaVal_txtView"
                app:layout_constraintTop_toTopOf="@+id/mealDetails_mealCate_txtView"
                tools:text="@string/country" />

            <TextView
                android:id="@+id/mealDetails_mealAreaVal_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:text="Area Value"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/mealDetails_mealArea_txtView"
                tools:text="Area Value" />

            <TextView
                android:id="@+id/mealDetails_steps_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="@string/steps"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline_Left"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toEndOf="@+id/guideline_Right"
                app:layout_constraintTop_toBottomOf="@+id/mealDetails_mealCateVal_txtView"
                tools:text="@string/steps" />

            <TextView
                android:id="@+id/mealDetails_stepsVal_txtView"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:inputType="textMultiLine"
                android:text="Steps Value Steps Value Steps Value Steps Value Steps Value Steps Value Steps Value Steps Value Steps Value Steps Value"
                app:layout_constraintEnd_toStartOf="@+id/guideline_Left"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="@+id/mealDetails_steps_txtView"
                app:layout_constraintRight_toRightOf="@+id/mealDetails_steps_txtView"
                app:layout_constraintStart_toEndOf="@+id/guideline_Right"
                app:layout_constraintTop_toTopOf="@+id/mealDetails_steps_txtView"
                tools:text="Steps Value" />

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline_Left"
                app:layout_constraintStart_toEndOf="@+id/guideline_Right"
                app:layout_constraintTop_toBottomOf="@+id/mealDetails_stepsVal_txtView">

                <com.google.android.youtube.player.YouTubePlayerView
                    android:id="@+id/videoView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:autoPlay="false"
                   />
            </FrameLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_Right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="14dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_Left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="395dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/mealDetails_addToPlan_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:drawableStart="@drawable/baseline_add_24"
                android:text="@string/addToPlan"
                style="@style/Button"
                android:paddingEnd="10dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view" />

            <androidx.constraintlayout.widget.Barrier
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="mealDetails_stepsVal_txtView"
                tools:layout_editor_absoluteX="13dp"
                tools:layout_editor_absoluteY="437dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>