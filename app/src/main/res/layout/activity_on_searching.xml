<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".searchBy.view.OnSearchingActivity">

    <ImageButton
        android:id="@+id/onSearching_back_imageBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/ripple_effect"
        />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/onSearching_textInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="@string/search_by"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:boxStrokeColor="@color/colorAccent"
        app:startIconDrawable="@drawable/baseline_food_bank_24"
        app:startIconTint="@color/colorAccent"
        app:hintTextColor="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent">

        <AutoCompleteTextView
            android:id="@+id/onSearching_autoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:inputType="none"
            android:textSize="15sp"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <androidx.appcompat.widget.SearchView
        android:id="@+id/onSearching_searchView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/search_shape"
        android:elevation="30dp"
        app:defaultQueryHint="@string/search_recipe"
        app:iconifiedByDefault="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/onSearching_textInputLayout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/onSearching_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="30dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/onSearching_searchView"
        tools:itemCount="10"
        tools:layout_editor_absoluteX="10dp"
        tools:listitem="@layout/meal_item" />


</androidx.constraintlayout.widget.ConstraintLayout>