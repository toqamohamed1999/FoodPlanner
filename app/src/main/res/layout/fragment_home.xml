<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="70dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <ImageView
        android:id="@+id/home_profile_imageView"
        android:layout_width="79dp"
        android:layout_height="58dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/baseline_person_pin_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/baseline_person_pin_24" />


            <TextView
                android:id="@+id/inspiration_meal_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inspiration"
                android:textColor="@color/primaryOrange"
                android:textSize="30dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:fontFamily="@font/daily_keisha"
                app:layout_constraintTop_toBottomOf="@id/home_profile_imageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.079"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="108dp" />

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/inspiration_meal_cardView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:layout_margin="10dp"
            app:cardCornerRadius="20dp"
            android:elevation="20dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inspiration_meal_tv"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp"
                >

                <ImageView
                    android:id="@+id/home_card_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/cake" />

                <TextView
                    android:id="@+id/home_card_title_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Pan Cakes"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.193"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/home_card_imageview" />

                <TextView
                    android:id="@+id/home_card_category_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Desserts"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/home_card_title_textview"
                    app:layout_constraintTop_toBottomOf="@id/home_card_title_textview" />

                <ImageView
                    android:id="@+id/home_card_fav_imageview"
                    android:layout_width="43dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    android:background="#57FFFFFF"
                    android:backgroundTint="#2AFFFFFF"
                    app:layout_constraintEnd_toEndOf="@id/home_card_imageview"
                    app:layout_constraintTop_toTopOf="@id/home_card_imageview"
                    app:srcCompat="@drawable/baseline_favorite_24" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/home_category_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Category"
        android:textColor="@color/primaryOrange"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.016"
        app:layout_constraintStart_toStartOf="@+id/inspiration_meal_tv"
        app:layout_constraintTop_toBottomOf="@+id/inspiration_meal_cardView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_category_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/home_category_textview"
        tools:listitem="@layout/meal_item"
        android:elevation="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="7dp"
        tools:itemCount="10"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>